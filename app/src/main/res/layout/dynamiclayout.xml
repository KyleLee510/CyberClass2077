<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_group_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/id_group_name"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="name"/>
    </LinearLayout>
    <TextView
        android:id="@+id/id_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="35px"
        android:layout_marginLeft="10dp"
        android:text="水光潋滟晴方好，山色空蒙雨亦奇。\n
欲把西湖比西子，淡妆浓抹总相宜。"/>
    <ImageView
        android:id="@+id/id_list_img"
        android:src="@drawable/lizi"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginStart="30dp"/>
        <ImageView
            android:id="@+id/id_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chat_bubble_outline_black_24dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/id_amount_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:text="*****赞"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_first_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:textSize="20sp"
            android:inputType="textMultiLine"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/id_amount_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:text="*****评论"/>
    <TextView
        android:id="@+id/id_time_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:text="*****时间"/>
</LinearLayout>
